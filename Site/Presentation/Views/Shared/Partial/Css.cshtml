@using Structure.Helpers

@model Presentation.Models.General.CssModel
		   
@{
	foreach (var file in Model.Files)
	{
		<link href="@Url.Content("~/Assets/css/" + file.Name)?v=@Config.Version"
		      rel="stylesheet" type="text/css" media="@file.Media" />
	}

	if (Context.Request.Query["Print"] == "Local") {
		<link href="@Url.Content("~/Assets/css/print_Local.css")?v=@Config.Version"
		      rel="stylesheet" type="text/css" media="print" />
	}
}
