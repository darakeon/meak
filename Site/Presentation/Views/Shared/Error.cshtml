@model Presentation.Models.ErrorModel

@{
	ViewBag.Title = "Erro";
	Layout = "~/Views/Shared/_Layout.cshtml";

	var stackLines = Model.Stacktrace
		.Replace("\r", "")
		.Split('\n')
		.Select(s => $"<li>{s}</li>");

	var stack = String.Join("", stackLines);
}

<h2>Ops!</h2>

<p>
	Aconteceu um erro ao tentar acessar esta história.
</p>

<p>
	Por favor, entre em contato:
	<a href="mailto:meak@darakeon.com">meak@darakeon.com</a>
</p>

<div class="error-details">
	<p class="title">@Model.Message</p>
	<small>
		<ul>@Html.Raw(stack)</ul>
	</small>
</div>
