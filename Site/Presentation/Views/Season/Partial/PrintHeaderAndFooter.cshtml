@using DK.MVC.Authentication
@model Structure.Entities.System.Episode

@{
	var startPage = Authenticate.IsAuthenticated
		? Model.PageStart
		: 0;
}

<div class="just-print" style="counter-reset: page @startPage">
	<div class="header">
		<div class="title">
			@Model.Title
		</div>
		<div class="name">
			MEAK
		</div>
		<div class="id">
			@Model.Season@Model
		</div>
	</div>
	<div class="cover-first-title"></div>
	<div class="footer"></div>
</div>
