@using Version = Structure.Version

@model Presentation.Models.General.CssModel
		   
@{
	foreach (var file in Model.Files)
	{
		<link href="@Url.Content("~/Assets/css/" + file.Name)?v=@Version.Name"
		      rel="stylesheet" type="text/css" media="@file.Media" />
	}

	if (Request["Print"] == "Local") {
		<link href="@Url.Content("~/Assets/css/print_Local.css")?v=@Version.Name"
		      rel="stylesheet" type="text/css" media="print" />
	}
}
